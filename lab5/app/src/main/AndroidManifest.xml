<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hfad.lab5">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lab5"
        android:requestLegacyExternalStorage="true">
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LifeCycleTest"
            android:label="LIFE"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".SingleTouchTest"
            android:label="TOUCH">
        </activity>

        <activity android:name=".MultiTouchTest"
            android:label="MULTY"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".KeyTest"
            android:label="KEY"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".AccelerometerTest"
            android:label="ACCEL">
        </activity>

        <activity android:name=".AssetsTest"
            android:label="ASSET">
        </activity>

        <activity android:name=".ExternalStorageTest"
            android:label="STORE">
        </activity>

        <activity android:name=".SoundPoolTest"
            android:label="SOUND">
        </activity>

        <activity android:name=".MediaPlayerTest"
            android:label="MEDIA">
        </activity>

        <activity android:name=".FullScreenTest"
            android:label="FULL">
        </activity>

        <activity android:name=".RenderViewTest"
            android:label="RENDER">
        </activity>

        <activity android:name=".ShapeTest"
            android:label="SHAPE">
        </activity>

        <activity android:name=".BitmapTest"
            android:label="BIT">
        </activity>

        <activity android:name=".FontTest"
            android:label="FONT">
        </activity>

        <activity android:name=".SurfaceViewTest"
            android:label="SURFACE">
        </activity>

    </application>

</manifest>